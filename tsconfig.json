{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2016",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "jsx": "preserve",

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["vite/client", "unplugin-vue-router/client"],

        /* JavaScript Support */
        "allowJs": true,
        // "checkJs": true,
        // "maxNodeModuleJsDepth": 1,

        /* Emit */
        "noEmit": true,

        /* Interop Constraints */
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": false,
        "skipLibCheck": true,

        "baseUrl": "."
    },
    "exclude": ["node_modules", "public"],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "resources/js/app.ts",
        "./typed-router.d.ts"
    ]
}
